<%- include('includes/head') %>
  <%- include('includes/nav') %>

    <div class="container">
      <div class="row">
        <div class="col-lg-2"></div>

        <div class="col-lg-8 my-3"></div>
        <h1 class="text-center">Contato</h1>
        <p class="text-center lead">Crie ou edite seu contato</p>


        <%- include('includes/messages') %>
          <% if(contato._id) { %>
            <form class="cadastro" action="/contato/edit/<%= contato._id %>" method="POST">
              <% } else { %>
                <form class="cadastro" action="/contato/register" method="POST">
                  <% } %>
                    <input type="hidden" name="_csrf" value=<%=csrfToken %>>

                    <div class="form-group ">
                      <label for="nome">Nome</label>
                      <input value="<%= contato.nome  %>" type="text" class="form-control" name="nome" id="nome"
                        autocomplete="given-name">

                      <label for="sobrenome">Sobrenome</label>
                      <input value="<%= contato.sobrenome  %>" type="text" class="form-control" name="sobrenome"
                        id="sobrenome" autocomplete="family-name">

                      <label for="email">Email</label>
                      <input value="<%= contato.email  %>" type="email" class="form-control" name="email" id="email"
                        autocomplete="email">

                      <label for="tel">Telefone</label>
                      <input value="<%= contato.telefone  %>" type="tel" class="form-control" name="telefone" id="tel"
                        autocomplete="tel">

                      <button type="submit" class="btn btn-primary my-3">Salvar</button>
                </form>
      </div>
      </form>

      <div class="col-lg-2"></div>
    </div>
    </div>

    <%- include('includes/footer') %>